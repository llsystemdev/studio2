rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This is suitable for public assets like vehicle images.
    // For user-uploaded private documents, a more restrictive rule
    // would be necessary, checking for user authentication.
    match /{allPaths=**} {
      allow read;
      allow write: if request.auth != null; // Only authenticated users can write
    }
  }
}
