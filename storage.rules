
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access for vehicle images for the home page.
    match /flota/{allPaths=**} {
      allow read: if true;
    }
    
    // Allow authenticated users to write to specific folders.
    // This is a generic rule. For more security, you could restrict by file type or size.
    // e.g., documents/{userId}/{allPaths=**}
    match /{folder}/{userId}/{allPaths=**} 
      where folder in ['documents', 'signatures', 'inspections'] {
      allow write: if request.auth != null && request.auth.uid == userId;
      // Allow read access only to the user who uploaded it or if they have a download token.
      allow read: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny all other reads and writes
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
