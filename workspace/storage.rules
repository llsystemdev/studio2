
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files by default.
    // This is useful for public assets like the cover image and vehicle photos.
    match /{allPaths=**} {
      allow read;
      // Restrict write access to authenticated users only.
      // This protects your storage from unauthorized uploads.
      allow write: if request.auth != null;
    }
  }
}
